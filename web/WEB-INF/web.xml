<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Authenication</filter-name>
        <filter-class>filter.Authenication</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Authenication</filter-name>
        <url-pattern>/cxzcxzxzc</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>controller.SignUpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateStateRoom</servlet-name>
        <servlet-class>controller.updateStateRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkCode</servlet-name>
        <servlet-class>controller.checkCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditHotel</servlet-name>
        <servlet-class>controller.EditHotel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateStateRoom</servlet-name>
        <url-pattern>/updateStateRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkCode</servlet-name>
        <url-pattern>/checkCode</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListHotel</servlet-name>
        <servlet-class>controller.ListHotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HotelManage</servlet-name>
        <servlet-class>controller.HotelManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>roomManage</servlet-name>
        <servlet-class>controller.roomManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOwner</servlet-name>
        <servlet-class>controller.CheckOwner</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>controller.profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteHotel</servlet-name>
        <servlet-class>controller.DeleteHotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadImage</servlet-name>
        <servlet-class>controller.UploadImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddHotel</servlet-name>
        <servlet-class>controller.AddHotel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListHotel</servlet-name>
        <url-pattern>/listhotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HotelManage</servlet-name>
        <url-pattern>/hotelmanage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>roomManage</servlet-name>
        <url-pattern>/roommanage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOwner</servlet-name>
        <url-pattern>/checkowner</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteHotel</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadImage</servlet-name>
        <url-pattern>/uploadimage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddHotel</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditHotel</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
